<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        tools:context=".activity.ThankYouActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_35sdp" />

            <TextView
                android:id="@+id/tv_thankyou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:fontFamily="@font/mainttfb"
                android:text="Thank You"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_32sdp"
                android:textStyle="normal" />


            <LinearLayout
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/dot_filled"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"/>

                <TextView
                    android:fontFamily="@font/mainttfre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="History will be send as a PDF format or MP3 format to your mail id within 5 to 7 business days."
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/dot_filled"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check your mail inbox in 5 to 7 business days."
                    android:fontFamily="@font/mainttfre"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/dot_filled"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mainttfb"
                        android:text="Reason For 5 to 7 Business Days"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="- To Collect accurate data, Complexity is one of the major factors for a time delay."
                        android:fontFamily="@font/mainttfre"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/native_banner_adplaceholder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="vertical" />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/next_btn"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_35sdp"
            app:cardElevation="@dimen/_5sdp">

            <ImageView
                android:id="@+id/btn_animation_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_animation" />

            <TextView
                android:id="@+id/tv_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/mainttfb"
                android:text="Done"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="normal" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>